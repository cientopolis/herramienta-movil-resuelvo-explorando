<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <gradient
          android:startColor="#BDD2FF"
          android:endColor="#9CBBFF"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#4F70B8" />
      <corners
          android:radius="20dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#9CBBFF"
          android:endColor="#BDD2FF"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#4F70B8" />
      <corners
          android:radius="20dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>